<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffff"
    tools:context=".HocTap.CDGiadinh.TestCDGiadinh.WonActivity">

    <RelativeLayout
        android:id="@+id/toolbarch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#add8e6"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_back" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:text="Exit"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayouta"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/toolbarch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarMH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cpb_background_progressbar_color="@color/red"
            app:cpb_background_progressbar_width="15dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="20"
            app:cpb_progressbar_color="@color/light_blue"
            app:cpb_progressbar_width="15dp"
            app:cpb_round_border="false" />

        <TextView
            android:id="@+id/resultTextMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="10/20"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hoanthanhTestMH"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relativelayouta"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_btanswer"
        android:gravity="center"
        android:text="Hoàn thành"
        android:textSize="30dp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hoanthanhTestMH"
        android:src="@drawable/hoanthanh"
        />
</RelativeLayout>