<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTuVung"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Mother"
                android:textColor="	#0000ff"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/archivo_black"
                android:paddingLeft="30dp"
                android:text="Phiên âm"
                android:textColor="@color/black"
                android:textSize="17dp" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/voiceTV"
                    android:layout_marginLeft="40dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icons8_speaker"/>
                <TextView
                    android:id="@+id/tvPhienamTV"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="/ˈmʌðər/"
                    android:textColor="#AE000000"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/archivo_black"
                android:text="Nghĩa "
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tvNghiaTV"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:text="Mẹ"
                android:paddingLeft="50dp"
                android:textColor="#AE000000"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/imageViewAnhTV"
                android:layout_width="250dp"
                android:layout_height="117dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_item_listview"
                android:src="@drawable/icon_mother" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/archivo_black"
                android:text="Ví dụ"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvViduTV"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="10dp"
                android:text="Mẹ"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvDichVidu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="10dp"
                android:text="Mẹ"
                android:textColor="#000000"
                android:textSize="17dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>